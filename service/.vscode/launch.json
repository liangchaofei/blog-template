    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            //"program": "${workspaceFolder}/index.js",
            "runtimeExecutable": "npm", // 或者 node-dev
            "restart": true,
            "console": "integratedTerminal",
            "runtimeArgs": ["run-script", "dev"],
            "skipFiles": [
              "${workspaceRoot}/node_modules/**/*.js",
              "<node_internals>/**/*.js"
            ]
        }
    ]
}